<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="/workspace/skyline/lib/ojdbc6.jar"/>

    <!--信息-->
    <context id="AllInfo" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="fip"
                        password="fip">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="skyline.platform.repository.model" targetProject="main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="skyline.platform.repository.mapper" targetProject="main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="skyline.platform.repository.dao" targetProject="main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!-- 业务表 -->
        <!-- <table schema="fip" tableName="IBP_IF_CCB_TXN">
            <property name="ignoreQualifiersAtRuntime" value="true" />
            <generatedKey column="pkid" sqlStatement="select sys_guid() from dual" identity="false"/>
        </table> -->

        <!--平台类 -->

        <table tableName="ptdept"/>
        <table tableName="ptenudetail"/>
        <table tableName="ptenumain"/>
        <table tableName="pterror"/>
        <table tableName="ptlogicact"/>
        <table tableName="ptmenu"/>
        <table tableName="ptoper"/>
        <table tableName="ptoperrole"/>
        <table tableName="ptresource"/>
        <table tableName="ptrole"/>
        <table tableName="ptroleres"/>

    </context>

</generatorConfiguration>
